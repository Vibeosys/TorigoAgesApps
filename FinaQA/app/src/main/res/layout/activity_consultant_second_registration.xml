<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_consultant"
    tools:context="com.finaqa.activities.ConsultantSecondRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/loginTransparnt"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/white_boarder"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_userNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/userNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_date_time_white_24"
                            android:hint="Practicing year"
                            android:inputType="textEmailAddress"
                            android:paddingStart="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_degreeHoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/degreeHoldEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_graduation_cap_24"
                            android:hint="Degree hold"
                            android:inputType="textEmailAddress"
                            android:paddingStart="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_collageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/collageEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_collage_24"
                            android:hint="Collage name"
                            android:inputType="textEmailAddress"
                            android:paddingStart="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white" />

                    <RadioGroup
                        android:id="@+id/radioSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Employee"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Self employee"
                            android:textColor="@android:color/white" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/consult_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/white_boarder"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_white_36dp"
                        android:drawablePadding="12dp"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
