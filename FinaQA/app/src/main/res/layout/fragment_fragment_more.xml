<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutAboutUs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/queries_color"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <com.finaqa.customeview.AbelTextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="@string/str_about_us"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_36dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContactus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/consulting_free_pay"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <com.finaqa.customeview.AbelTextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="@string/str_contact_us"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_36dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/finance_advice"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <com.finaqa.customeview.AbelTextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="@string/str_profile"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_36dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChangePassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/planning_expert_meeting"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <com.finaqa.customeview.AbelTextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="@string/str_change_password"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_36dp" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
