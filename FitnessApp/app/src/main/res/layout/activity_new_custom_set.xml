<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vibeosys.fitnessapp.activities.NewCustomSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:text="@string/str_set_name"
            android:textColor="@color/primaryText"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_set_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_black"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/primaryText2"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:text="@string/str_workout_desc"
            android:textColor="@color/primaryText"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_set_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:drawablePadding="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="6"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/primaryText2"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text="@string/str_add_set"
        android:textColor="@android:color/white" />

</LinearLayout>
