<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.groceryfood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LanguageActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CheckOutActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".OrederFinishActivity" />
        <activity
            android:name=".TrackOrdersActivity"
            android:parentActivityName=".CheckOutActivity" />
        <activity
            android:name=".DisplayTrackOrdersActivity"
            android:parentActivityName=".TrackOrdersActivity" />
        <activity
            android:name=".OrderDetailsActivity"
            android:parentActivityName=".DisplayTrackOrdersActivity" />
        <activity
            android:name=".MyFavouritesActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>