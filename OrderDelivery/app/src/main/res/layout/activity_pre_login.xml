<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.orderdelivery.views.PreLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/pre_login_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/over_layer"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signIn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="SIGN IN" />

            <Button
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/register_btn_background"
                android:text="SIGN UP"
                android:textColor="@android:color/white" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

           <!-- <TextView
                android:id="@+id/appLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking for the quadmni app?"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:textColor="@android:color/black"
                android:textSize="18sp" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
